<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>C name</th>
      <th>C location</th>
      <th>C email</th>
      <th>C password</th>
      <th>C location</th>
      <th>C contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.c_name %></td>
        <td><%= company.c_location %></td>
        <td><%= company.c_email %></td>
        <td><%= company.c_password %></td>
        <td><%= company.c_location %></td>
        <td><%= company.c_contact_number %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

